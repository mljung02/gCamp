.main
  .container
    %h1 New Task
    %ol.breadcrumb
      %li
        %a{:href=>project_tasks_path} Home
      %li New Task

    - if @task.errors.any?
      - @task.errors.full_messages.each do |message|
        %p.alert.alert-danger= message
    .form
      = form_for [@project, @task], :html=>{:class => 'form-horizontal'} do |f|
        .form-group
          = f.label :description, :class=> 'col-md-2'
          = f.text_field :description, :class=> 'col-md-10'
          = f.label :due_date, :class=> 'col-md-2'
          = f.date_field :due_date

        .form-group.col-md-offset-2.col-md-10
          = f.submit :class => 'btn btn-primary'
          = link_to "cancel", project_tasks_path, :class => 'btn btn-default'
