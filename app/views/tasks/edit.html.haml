.main
  .container
    %h1 Edit Task
    - if @task.errors.any?
      - @task.errors.full_messages.each do |message|
        %p.alert.alert-danger= message
    .form
      = form_for @task do |f|
        = f.label :description
        %p
          = f.text_field :description
        %p
          = f.submit
      %p
        %a{:href=>task_path(@task)} Show
        %span
        |
        %a{:href=>tasks_path} Home
